  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Nose",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "program": "${workspaceRoot}/.vscode/run_nose.py",
      "cwd": "${workspaceRoot}",
      "args": [
          "${file}",  // currently selected file
          "-v",       // additional nose parameters â€“
          "-s"        // tweak to your liking
      ]
    }
  ]
}